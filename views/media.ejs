<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        <%= meta.title %>
    </title>
    <link rel="stylesheet" type="text/css" href="<%= escape(stylesheet) %>">
    <link rel="icon" type="image/x-icon" href="<%= escape(favicon) %>">
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta name="application-name" content="Stock" />
    <meta name="author" content="Skadro" />
    <% if (meta.mediaType==='image' ) { %>
        <script src="<%= escape(zoomScript) %>"></script>
        <meta name="viewport" content="width=device-width, minimum-scale=0.1">
        <% } else if (meta.mediaType==='video' ) { %>
            <meta name="viewport" content="width=device-width">
            <% } %>
                <meta name="google" content="nositelinkssearchbox" />
                <link rel="alternate" type="application/json+oembed" href="<%= meta.oEmbed %>"
                    title="<%= meta.filename %>" />
                <meta property="og:url" content="<%= meta.url %>">
                <meta property="og:title" content="<%= meta.filename %>" />
                <meta property="og:type" content="website">
                <% if (meta.mediaType==='image' ) { %>
                    <meta property="og:image" content="<%= meta.mediaURL %>" />
                    <% if (secured) { %>
                        <meta property="og:image:secure_url" content="<%= meta.mediaURL %>" />
                        <% } %>
                            <meta property="og:image:type" content="<%= meta.contentType %>" />
                            <meta property="og:image:width" content="<%= meta.width %>" />
                            <meta property="og:image:height" content="<%= meta.height %>" />
                            <meta property="og:image:alt" content="<%= meta.filename %>" />
                            <meta name="twitter:card" content="summary_large_image" />
                            <% } else if (meta.mediaType==='video' ) { %>
                                <meta property="og:video" content="<%= meta.mediaURL %>" />
                                <% if (secured) { %>
                                    <meta property="og:video:secure_url" content="<%= meta.mediaURL %>" />
                                    <% } %>
                                        <meta property="og:video:type" content="<%= meta.contentType %>" />
                                        <meta property="og:video:width" content="<%= meta.width %>" />
                                        <meta property="og:video:height" content="<%= meta.height %>" />
                                        <% } %>

</head>

<body>
    <div id="container">
        <% if (meta.mediaType==='image' ) { %>
            <img class="image" src="<%= meta.mediaURL %>" alt="<%= meta.filename %>">
            <% } else if (meta.mediaType==='video' ) { %>
                <video class="video" controls>
                    <source src="<%= meta.mediaURL %>" type="<%= meta.contentType %>">
                </video>
                <% } %>
    </div>
</body>

</html>